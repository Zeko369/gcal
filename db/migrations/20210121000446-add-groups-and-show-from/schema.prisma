datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------

model User {
  id             Int        @id @default(autoincrement())
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  name           String?
  email          String     @unique
  hashedPassword String?
  role           String     @default("user")
  sessions       Session[]
  calendars      Calendar[]
  groups         Group[]
  googleToken    String?
  googleTokenRef String?
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  user               User?     @relation(fields: [userId], references: [id])
  userId             Int?
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?
}

model Group {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  calendars Calendar[]
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
}

model Calendar {
  id             Int       @id @default(autoincrement())
  order          Int       @default(autoincrement())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  pricePerHour   Float?
  currency       String?
  currencyBefore Boolean   @default(false)
  name           String
  color          String?
  group          Group     @relation(fields: [groupId], references: [id])
  groupId        Int
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
  uuid           String
  archivedAt     DateTime?
  showFrom       DateTime?
}
